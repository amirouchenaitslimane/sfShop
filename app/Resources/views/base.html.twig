                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header_top-->
    <div class="header-middle"><!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="logo pull-left">
                        <h1><a href="{{ path('am_express_homepage') }}"><span class="letra">AM</span>-SHOPPER</a></h1>
                    </div>
                    <div class="pull-right">

                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">

                            {% if is_granted("ROLE_ADMIN") %}
                                <li><a href="">Dashboard</a></li>
                            {% endif %}
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li> <a href="{{ path('fos_user_security_logout') }}"> <i class="fa fa-user"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                                <li><a href="#"><i class="fa fa-user"></i> Mi cuenta</a></li>
                            {% else %}
                                <li> <a href="{{ path('fos_user_security_login') }}"> <i class="fa fa-user"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}  </a></li>

                                <li> <a href="{{ path('fos_user_registration_register') }}"> <i class="fa fa-user"></i> {{ 'layout.register'|trans({}, 'FOSUserBundle') }}  </a></li>

                            {% endif %}
                            <li><a href="{{ path('am_express_cart') }}"><i class="fa fa-shopping-cart"></i> Cesta { {{ app.session.get('panier')|length }} } </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-middle-->
    <div class="header-bottom"><!--header-bottom-->
        <div class="container">
            <div class="row">
                {{ render(controller("AMExpressBundle:Default:navigation")) }}

            </div>
        </div>
    </div><!--/header-bottom-->
</header>
